<%= div_for show_answer do %>
<div class="block radius-block border-box margin">
	<div class="left-block">
		<div class="votes_trend" id="vote_trend_<%= show_answer.class %>_<%= show_answer.id %>"><%= show_answer.votes_trend %></div>
	</div>
	<div class="right-block">
		<div class="mainwords">
			<%= safe_html_out_for(show_answer.body) %>
		</div>
		<%= render :partial => 'comments_module', :locals => {:whose => show_answer} %>
	</div>
</div>
<div class="kid-block radius-block border-box">
	<%= render :partial => 'other/user_info', :locals => {:user => show_answer.user} %>
</div>
<% end %>