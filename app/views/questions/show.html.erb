<h3><%= @question.title %></h3>
<div class="block block-top radius-block radius-block-top border-box">
	<div class="left-block">
		<div class="votes_trend" id="vote_trend_<%= @question.class %>_<%= @question.id %>"><%= @question.votes_trend %></div>
	</div>
	<div class="right-block">
		<div class="mainwords">
			<%= safe_html_out_for(@question.body) %>
		</div>
		<%= render :partial => 'comments_module', :locals => {:whose => @question} %>
	</div>
</div>
<div class="block radius-block-bottom border-box">
	<div class="left-block">
	</div>
	<div class="right-block">
		<%= link_to '回答', new_question_answer_path(@question), :remote => true %>
		<% if can? :edit, @question %>
			<%= link_to '编辑', edit_question_path(@question) %>
		<% end %>
		<% euler = euler(@question.version) %>
		<% for i in 0..euler.length-1 do %>
		<%= link_to euler.at(i), :version => i %>
		<% end %>
	</div>
</div>
<div class="kid-block radius-block border-box">
	<%= render :partial => 'other/user_info', :locals => {:user => @question.user} %>
</div>
<div id="create-answer" style="display:none">
	<div class="block radius-block border-box block-margin">
		<%= render :partial => @answer = Answer.new %>
	</div>
</div>
<div style="clear:both"></div>
<!-- Answers start -->
<h3><%= @question.answers.count %> 个答案</h3>
<div id="answers">
	<%= render :partial => "answers/show_answer", :collection => @question.answers.sort {|a,b| b.votes_trend <=> a.votes_trend } %>
</div>